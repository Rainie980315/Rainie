    <script>
        function toggleLanguage(lang) {
            document.querySelectorAll('[lang="en"]').forEach(e => e.style.display = lang === 'en' ? 'block' : 'none');
            document.querySelectorAll('[lang="cn"]').forEach(e => e.style.display = lang === 'cn' ? 'block' : 'none');
        }
    </script>
